.account-wrapper
    .account-top
        border-bottom 1px solid #e8e8e8
        .account-header
            padding 0 0.533333rem
            height 44px
            position fixed
            top 0
            left 0
            right 0
            display flex
            line-height 44px
            margin 0 
            .icon
                font-size 28px
                color #999999
            .account-title
                flex 1
                text-align center
                font-size 18px
            .exchange
                color #888888
                font-size .426667rem
        .account-balance-wrapper
            text-align center
            .account-balance
                margin-top 1.133333rem
                font-size .8rem
            .view-detail
                margin-top .333333rem
                font-size .373333rem
                color #888888
        .account-img
            padding 0 .533333rem
            margin-top .533333rem
            margin-bottom .626667rem
            img 
                width 100%
    .recharge-wrapper
        padding 0 0.533333rem
        margin-top 1.026667rem
        .recharge-title
            margin-bottom .8rem
            .main-title
                font-size .48rem
            .supplement-title
                font-size .333333rem
                color #888888
        .recharge-item-wrapper
            display flex
            flex-wrap wrap
        button 
            width 100%
            margin-top .933333rem
            background-color #fa8919
            border none
            border-radius 8px
            height 1.266667rem

            
